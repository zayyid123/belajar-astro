---
const url = Astro.url;
const links = [
    { href: "/", label: "Astro" },
    { href: "/react", label: "React" },
    { href: "/vue", label: "Vue" },
];
---

<div class="navbar">
    <nav>
        {links.map(link => (
            <a
              href={link.href}
              class={url.pathname === link.href ? 'active' : ''}
            >
              {link.label}
            </a>
        ))}
    </nav>
</div>

<style scoped>
.navbar {
  width: 100%;
  height: 60px;
  background-color: #333;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 1.5rem;
  position: sticky;
  top: 0;
}

.navbar nav {
  display: flex;
  gap: 20px;
}

.navbar a {
  color: white;
  text-decoration: none;
}

.navbar a.active {
  color: #2196f3 !important; /* biru */
}

.navbar a:hover {
  text-decoration: underline;
}
</style>
